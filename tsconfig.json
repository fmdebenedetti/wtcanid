{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "files": ["jest.d.ts"],
  "include": [
    "services/**/*.ts",
    "src/**/*.ts",
    "graphql/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
